<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        app:cardCornerRadius="2dp">

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <RadioButton
                android:id="@+id/alignLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/alignment_selector"
                android:button="@drawable/ic_format_align_left_black_48dp"
                android:checked="true"
                android:onClick="onAlignmentSelected" />

            <RadioButton
                android:id="@+id/alignCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/alignment_selector"
                android:button="@drawable/ic_format_align_center_black_48dp"
                android:onClick="onAlignmentSelected" />

            <RadioButton
                android:id="@+id/alignRighr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/alignment_selector"
                android:button="@drawable/ic_format_align_right_black_48dp"
                android:onClick="onAlignmentSelected" />

            <RadioButton
                android:id="@+id/alignJustify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/alignment_selector"
                android:button="@drawable/ic_format_align_justify_black_48dp"
                android:onClick="onAlignmentSelected" />


        </RadioGroup>


    </android.support.v7.widget.CardView>

</LinearLayout>